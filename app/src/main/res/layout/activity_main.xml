<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ndhzs.netlayout.view.NetLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:net_rowCount="20"
        app:net_columnCount="10"
        app:net_isDebug="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_light"
            app:net_layout_startRow="2"
            app:net_layout_startColumn="4"
            app:net_layout_endRow="6"
            app:net_layout_endColumn="8" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            app:net_layout_startRow="5"
            app:net_layout_startColumn="2"
            app:net_layout_endRow="9"
            app:net_layout_endColumn="5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            app:net_layout_startRow="6"
            app:net_layout_startColumn="4"
            app:net_layout_endRow="14"
            app:net_layout_endColumn="7" />

    </com.ndhzs.netlayout.view.NetLayout>

</androidx.constraintlayout.widget.ConstraintLayout>